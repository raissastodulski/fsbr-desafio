@using Microsoft.AspNetCore.Components
@model fsbr_desafio.Models.Processo

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Nome" class="control-label"></label>
    <input asp-for="Nome" class="form-control" />
    <span asp-validation-for="Nome" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Npu" class="control-label"></label>
    <input asp-for="Npu" class="form-control" />
    <span asp-validation-for="Npu" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Uf" class="control-label"></label>
    <select asp-for="Uf" class="form-select" onchange="aoSelecionarUf()">
        <option selected>Selecione um estado</option>
        @foreach(var uf in await IbgeApi.BuscarUfs())
        {<option value=@uf.sigla>@uf.nome</option>}
    </select>
</div>

<div class="form-group">
    <label asp-for="Municipio" class="control-label"></label>
    <select asp-for="Municipio" class="form-select">
        <option selected>Selecione um munic√≠pio</option>
    </select>
</div>

